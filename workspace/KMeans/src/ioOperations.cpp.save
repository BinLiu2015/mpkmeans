std::vector<double> getNextLineAndSplitIntoTokens(std::istream& str)
						{
	std::vector<double>   result;
	std::string                line;
	std::getline(str,line);

	std::stringstream          lineStream(line);
	std::string                cell;

	while(std::getline(lineStream,cell,','))
	{
		result.push_back(atof(cell.c_str()));
	}
	return result;
						}

std::vector<vector<double> > getChunk(std::istream& str, int chunkSize)
						{
	std::vector< vector<double> > chunkInstances;
	std::vector<double>   instance;

	for(int i =0; i<chunkSize; i++ ){
		instance = getNextLineAndSplitIntoTokens(str);
		if(instance.size() > 0)
			chunkInstances.push_back(instance);
	}

	return chunkInstances;
						}

